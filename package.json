{
    "private": true,
    "scripts": {
        "start-dev": "umi dev",
        "build": "umi build",
        "postinstall": "umi generate tmp",
        "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "test": "umi-test",
        "test:coverage": "umi-test --coverage",
        "prepare": "husky install",
        "eslint": "npx eslint src/",
        "lint-staged": "npx lint-staged src"
