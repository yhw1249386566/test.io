        "mobx": "^6.3.2",
        "mobx-react": "^7.2.0",
        "react": "17.x",
        "react-dom": "17.x",
        "react-google-recaptcha": "^2.1.0",
        "react-markdown": "^8.0.0",
        "react-syntax-highlighter": "^15.4.5",
        "remark-gfm": "^3.0.1",
        "umi": "^3.5.13"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^6.0.0",
        "@fortawesome/fontawesome-svg-core": "^1.3.0",
